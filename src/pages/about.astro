---
import Container from "../components/Container.astro";
import Team from "../components/Team.astro";
import Layout from "../layouts/Layout.astro";
import { BOOKING, SITE } from "../site.ts";
---

<Layout title={SITE + ' | About Us'}>
	<main class="space-y-20">
		<Container>
            <div class="relative flex flex-col-reverse items-center md:flex-row" id="hero">
                <div class="row items-center py-5 md:pb-20 md:pt-10 container max-w-3xl mx-auto">
                    <div class="text-center space-y-10">
                        <h2 class="text-5xl font-medium leading-none md:text-6xl">
                            We Make Technology <br> Work for You.
                        </h2>
                        <p class="mt-6 mb-8 text-lg font-normal leading-7 sm:mb-12">
                            At {SITE}, we specialize in custom software development and dependable computer maintenance. Our expert team works to deliver innovative, tailored solutions that optimize performance and keep your technology running smoothly. We're committed to helping businesses of all sizes thrive in the digital world with the right tools and support. Your success is our priority, and we're here to make technology work for you.
                        </p>
                        <a class="px-9 py-5 bg-zinc-900 hover:bg-white text-white hover:text-black border rounded-2xl justify-items-center md:justify-items-start gap-2.5 inline-flex" rel="noopener noreferrer"  href={BOOKING}>
                            <h2 class="text-center text-xl font-normal leading-7">Book a consultation</h2>
                        </a>
                    </div>
                </div>
            </div>
        </Container>
        <br>
        <Team />
        <br>
	</main>
</Layout>