---
import { Icon } from "astro-icon/components";
import Container from "./Container.astro";
import socials from "./Data/socials.json";
import Topic from "./Topic.astro";
---

<Container>
	<div class="relative flex flex-col items-stretch md:flex-row" id="contact">
		<Topic
			title="Contact"
			description="Connect with Us: Let's Discuss Your Business Idea"
		/>
		<div class="flex-grow p-2">
			<ul class="flex justify-center md:justify-end flex-wrap gap-4">
				{
					socials.map(({ name, icon, link }) => (
						<li class="hover:bg-lime rounded-lg p-2">
							<a
								href={link}
								rel="noreferrer"
								target="_blank"
								class="text-gray-700 transition hover:text-gray-700/75"
							>
								<span class="sr-only">{name}</span>
								<Icon name={icon} class="size-6" />
							</a>
						</li>
					))
				}
			</ul>
		</div>
	</div>

	<div
		class="relative flex flex-col md:items-stretch md:flex-row-reverse my-6 bg-zinc-100 rounded-[45px]"
	>
		<div class="w-full flex items-center py-12 px-6 sm:px-12 md:px-16 md:w-6/12 md:py-10">
			<form action="#" class="space-y-8 w-full">
				<div>
					<label
						for="name"
						class="block mb-2 text-base font-medium text-black"
						>Name</label
					>
					<input
						type="text"
						id="name"
						class="shadow-sm bg-white border text-black text-base rounded-lg focus:ring-black focus:border-black block w-full p-2.5"
						placeholder="Name"
						required
					/>
				</div>
				<div>
					<label
						for="email"
						class="block mb-2 text-base font-medium text-black"
						>Email</label
					>
					<input
						type="email"
						id="email"
						class="block p-3 w-full text-base text-black bg-white rounded-lg border shadow-sm focus:ring-black focus:border-black"
						placeholder="Email"
						required
					/>
				</div>
				<div>
					<label
						for="subject"
						class="block mb-2 text-base font-medium text-black"
						>Subject</label
					>
					<select id="subject" class="shadow-sm bg-white border text-black text-base rounded-lg focus:ring-black focus:border-black block w-full p-2.5">
						<option value="general-inquiry" selected>General Inquiry</option>
						<option value="technical-support">Technical Support</option>
						<option value="website-feedback">Website Feedback</option>
					</select>
				</div>
				<div class="sm:col-span-2">
					<label
						for="message"
						class="block mb-2 text-base font-medium text-black dark:text-gray-400"
						>Message</label
					>
					<textarea
						id="message"
						rows="6"
						class="block p-2.5 w-full text-base text-black bg-white rounded-lg shadow-sm border focus:ring-black focus:border-black"
						placeholder="Message"></textarea>
				</div>
				<button
					type="submit"
					class="w-full py-5 bg-zinc-900 rounded-[14px] justify-center gap-2.5 inline-flex"
				>
					<div
						class="text-center text-white text-xl font-normal leading-7"
					>
						Send Message
					</div>
				</button>
			</form>
		</div>
		<div class="hidden md:grid md:justify-items-end items-center md:w-6/12 md:py-2">
			<img src="/clients/contact.png" alt="" style="transform: rotateY(180deg);" />
		  </div>
  	</div>
</Container>
